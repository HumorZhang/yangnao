<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.lkx.dao.GoodMapper">


    <select id="selectAll" resultType="com.example.lkx.pojo.Good">
        select * from good
    </select>
    <select id="selectByType" resultType="com.example.lkx.pojo.Good">
        select * from good where type = #{type}
    </select>

    <select id="selectById" resultType="com.example.lkx.pojo.Good">
        select * from good where id = #{id}
    </select>
</mapper>